# WordPress Multi-Site Docker Deployment - GitIgnore

# ========================================
# SENSITIVE FILES - NEVER COMMIT
# ========================================
.env
.env.local
.env.production
*.pem
*.key
*.crt
id_rsa*
*.ppk

# Database backups (too large for git)
DB/*.sql
backups/*.sql
*.sql.gz
mysql/data/

# ========================================
# WORDPRESS CORE & UPLOADS
# ========================================
# WordPress core files
*/public_html/wp-admin/
*/public_html/wp-includes/
*/public_html/wp-*.php
!*/public_html/wp-config.php
!*/public_html/wp-config-sample.php

# WordPress uploads (too large)
*/public_html/wp-content/uploads/
*/public_html/wp-content/cache/
*/public_html/wp-content/upgrade/
*/public_html/wp-content/backup-db/
*/public_html/wp-content/backups/
*/public_html/wp-content/blogs.dir/
*/public_html/wp-content/ai1wm-backups/

# WordPress plugins and themes (managed separately)
*/public_html/wp-content/plugins/
*/public_html/wp-content/themes/
!*/public_html/wp-content/themes/custom-*/
!*/public_html/wp-content/plugins/custom-*/

# WordPress config variations
*/public_html/wp-config-local.php
*/public_html/wp-config-staging.php

# ========================================
# DOCKER & CONTAINERS
# ========================================
# Docker volumes
mysql_data/
redis_data/
wp_*/

# Docker logs
logs/
*.log

