# =======================================================
# PHP CONFIGURATION
# =======================================================
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_VARS=3000
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M

# =======================================================
# NGINX CONFIGURATION
# =======================================================
NGINX_CLIENT_MAX_BODY_SIZE=100M
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# =======================================================
# SSL CONFIGURATION
# =======================================================
SSL_EMAIL=admin@yourdomain.com
SSL_STAGING=false

# =======================================================
# BACKUP CONFIGURATION
# =======================================================
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_FILES_PER_DB=10
BACKUP_COMPRESSION=gzip

# =======================================================
# MONITORING & LOGGING
# =======================================================
LOG_LEVEL=info
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=300

# =======================================================
# SECURITY SETTINGS
# =======================================================
ENABLE_FAIL2BAN=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
ENABLE_SECURITY_HEADERS=true

# =======================================================
# DEVELOPMENT SETTINGS (for staging environment)
# =======================================================
# Uncomment for staging/development
# ENVIRONMENT=staging
# WP_DEBUG=true
# WP_DEBUG_LOG=true
# SSL_STAGING=true

# =======================================================
# OPTIONAL: EXTERNAL SERVICES
# =======================================================

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_ENCRYPTION=tls

# CDN Configuration (optional)
# CDN_URL=https://cdn.yourdomain.com
# CDN_ENABLED=false

# External Database (optional - for offloading)
# EXTERNAL_DB_HOST=your-external-db-host
# EXTERNAL_DB_PORT=3306
# EXTERNAL_DB_USER=external_user
# EXTERNAL_DB_PASSWORD=external_password

# =======================================================
# IMPORTANT SECURITY NOTES
# =======================================================
# 1. Generate unique, strong passwords for all database users
# 2. Use different passwords for each website database
# 3. Generate new WordPress auth keys/salts for each environment
# 4. Never use default or simple passwords
# 5. Keep this file secure and never commit to version control
# 6. Use a password manager to generate and store credentials
# 7. Rotate passwords regularly
# 8. Enable two-factor authentication where possible

# =======================================================
# PASSWORD GENERATION EXAMPLES
# =======================================================
# Use these commands to generate secure passwords:
# openssl rand -base64 32
# pwgen -s 32 1
# or use online generators like: https://passwordsgenerator.net/

# =======================================================
# FIRST TIME SETUP CHECKLIST
# =======================================================
# [ ] Copy this file to .env
# [ ] Generate unique passwords for all database users
# [ ] Generate new WordPress auth keys and salts
# [ ] Update SSL_EMAIL with your email address
# [ ] Review and adjust PHP limits based on your needs
# [ ] Set appropriate backup retention policies
# [ ] Configure SMTP settings if using email features
# [ ] Test configuration with: docker-compose config
# [ ] Verify all services start: docker-compose up -d