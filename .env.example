WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false
WP_CACHE=true
WP_FORCE_SSL_ADMIN=true

# WordPress Table Prefix (default: wp_)
WORDPRESS_TABLE_PREFIX=wp_

