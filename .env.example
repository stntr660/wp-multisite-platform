# WordPress Multi-Site Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# MySQL Database Configuration
# ===========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# ===========================================
# Website Database Configurations
# ===========================================

# AirArom.ma WordPress Site
AIRAROM_DB_NAME=airarom_wp
AIRAROM_DB_USER=airarom_user
AIRAROM_DB_PASSWORD=your_secure_airarom_password

# ElectroRomanos.ma WordPress Site  
ELECTROROMANOS_DB_NAME=electroromanos_wp
ELECTROROMANOS_DB_USER=electroromanos_user
ELECTROROMANOS_DB_PASSWORD=your_secure_electroromanos_password

# FreshExpress.ma WordPress Site
FRESHEXPRESS_DB_NAME=freshexpress_wp
FRESHEXPRESS_DB_USER=freshexpress_user
FRESHEXPRESS_DB_PASSWORD=your_secure_freshexpress_password

# Sabeel.agency WordPress Site
SABEEL_DB_NAME=sabeel_wp
SABEEL_DB_USER=sabeel_user
SABEEL_DB_PASSWORD=your_secure_sabeel_password

# SabeelAcademy.ma WordPress Site
SABEELACADEMY_DB_NAME=sabeelacademy_wp
SABEELACADEMY_DB_USER=sabeelacademy_user
SABEELACADEMY_DB_PASSWORD=your_secure_sabeelacademy_password

# Sumo.ma WordPress Site
SUMO_DB_NAME=sumo_wp
SUMO_DB_USER=sumo_user
SUMO_DB_PASSWORD=your_secure_sumo_password

# YvesMorel.ma WordPress Site
YVESMOREL_DB_NAME=yvesmorel_wp
YVESMOREL_DB_USER=yvesmorel_user
YVESMOREL_DB_PASSWORD=your_secure_yvesmorel_password

# Zonemation.com WordPress Site
ZONEMATION_DB_NAME=zonemation_wp
ZONEMATION_DB_USER=zonemation_user
ZONEMATION_DB_PASSWORD=your_secure_zonemation_password

# ===========================================
# Environment Specific Settings
# ===========================================

# Environment type (development, staging, production)
ENVIRONMENT=production

# WordPress specific settings
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false

# Security settings
WP_FORCE_SSL_ADMIN=true
DISALLOW_FILE_EDIT=true

# ===========================================
# Redis Configuration (Optional)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=your-region
BACKUP_S3_ACCESS_KEY=your-access-key
BACKUP_S3_SECRET_KEY=your-secret-key

# ===========================================
# SSL Configuration
# ===========================================
SSL_EMAIL=your-email@domain.com
SSL_STAGING=false

# ===========================================
# Monitoring & Notifications
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
MONITORING_EMAIL=admin@yourdomain.com

# ===========================================
# Performance Settings
# ===========================================
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_MAX_INPUT_VARS=3000
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# ===========================================
# Development Settings (for local development)
# ===========================================
# Uncomment for development environment
# WP_DEBUG=true
# WP_DEBUG_LOG=true
# WP_DEBUG_DISPLAY=true
# ENVIRONMENT=development